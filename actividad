#2.2 convierte una cadena 
#se define cadena con el valor númerico
cadena= "59"
#se convierte a entero
numero = int(cadena)
print(numero+78)
#suma

#2.3 CONVIERTE TEXTO A FLOTANTE
#se define texto
texto="68"
#se convierte a flotante
convertido= float(texto)
print(convertido*2)

#2.4convertir un caracter
print("ingrese un caracter:")
caracter= input()
def se_puede_convertir (caracter):
    try:
        float(caracter)
        return True
    except ValueError:
       return False
resultado= se_puede_convertir(caracter)
print(resultado)


