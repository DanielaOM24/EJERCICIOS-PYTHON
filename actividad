#2.4convertir un caracter
print("ingrese un caracter:")
caracter= input()
def se_puede_convertir (caracter):
    try:
        float(caracter)
        return True
    except ValueError:
       return False
resultado= se_puede_convertir(caracter)
print(resultado)

#3.1 #CALCULA EL AREA DE UN RECTANGULO
print("INGRESE LA BASE DEL RECTANGULO:")
BASE= int (input())
print("INGRESE LA ALTURA DEL RECTANGULO:")
ALTURA= int(input())
print(f"La base del rect√°ngulo es {BASE} y la altura es {ALTURA}")
AREA=(BASE*ALTURA)
print (f"El area del rectangulo es:{AREA}")

#3.2 Dado un precio y un porcentaje de descuento, muestra el valor final a pagar.
print("ingrese un precio:")
precio= int(input())
print("ingrese un porcentaje:")
porcentaje= int(input())
valorffinal=(precio*porcentaje)/100
print(f"su precio con descuento es:{valorffinal}")

