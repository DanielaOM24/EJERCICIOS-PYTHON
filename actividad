#1.ingreso de datos por consola
#1.1 Nombre
print("¿cuál es  su nombre?:")
nombre=input()
print(f"su nombre es:{nombre}" ) 
print("¿cuál es su edad?:")
edad=input()
print(f"☺️  Hola {nombre},tu edad es {edad} ¡Que bien!,Agradecemos que estés con nosotros.🫰🏻")



#1.2 comida favorita
print("¿cuál es tu comida favorita?:🍽️")
comida=input()
print("¿cuál es tu color favorito?🌈")
color=input()
print(f"Excelente elección {nombre}, 🍕 Tu comida favorita es: {comida} y el color {color} es hermoso." )


#1.3 Número doble y triple
print("ingrese un  número")
numero=int (input())
doble=numero*2
triple=numero*3
print(f"El doble de {numero} es:{doble}")
print(f"El triple de {numero} es:{triple}") 


#2.1 declarar variable
str= nombre
int = 45
